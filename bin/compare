#!/usr/bin/env bash

in=tests/circle
if (( $# >= 1 )) && [ -e $1 ] ; then
    in=$1
fi

n=`cat $in | wc -l`
n=`expr $n - 1`
echo "Comparing $n-body problem: $in"
make

for s in Euler DK KD KDK DKD ChinC; do
    echo $n > $s.dat                                     # n-body
    cat $in | awk '{if (count++%3) print $0;}' >> $s.dat # initial
    bin/$s 2> $s.eng < $in \
	    | awk '{if (count++%3) print $0;}' >> $s.dat # outputs
done
